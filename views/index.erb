<ul>
  <% @files.each do |file| %>
    <li>
      <a href="/<%= file %>"><%= file %></a>
      <a href="/<%= file %>/edit">edit</a>
      <form action="/<%= file %>/delete" method="post" class="delete">
      <button type="submit">Delete</button>
    </form>
    </li>
  <% end %>
</ul>

<% if session[:signed_in] %>
  <p><a href="/new">New Document</a></p>
<% else %>
  <p><a href="/users/signin">Sign In</a></p>
<% end %>
