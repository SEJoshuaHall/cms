<h4>Edit contents of <%== @file_name %>:</h4>

<form id="edit" action="/<%== @file_name %>" method="post">
  <label for="content"></label>
  <textarea name="content" rows="35" cols="100"><%== @file_content %></textarea>
  <fieldset class="actions">
    <button type="submit" id="edit">Save</button>
    <a href="/">Cancel</a>
  </fieldset>
</form>